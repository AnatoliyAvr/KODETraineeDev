<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/iv_search"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:src="@drawable/search"
    app:layout_constraintBottom_toTopOf="@id/tv_found_nobody"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.30"
    app:layout_constraintVertical_chainStyle="packed" />

  <TextView
    android:id="@+id/tv_found_nobody"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_8"
    android:layout_marginBottom="@dimen/margin_8"
    android:text="Мы никого не нашли"
    android:textColor="#050510"
    android:textSize="17dp"
    app:layout_constraintBottom_toTopOf="@id/tv_try_again"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/iv_search"
    app:layout_constraintVertical_chainStyle="packed" />

  <TextView
    android:id="@+id/tv_try_again"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Попробуйте скорректировать запрос"
    android:textColor="#97979B"
    android:textSize="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_found_nobody"
    app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>